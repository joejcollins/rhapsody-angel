// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/alpine
{
	"name": "Alpine",
	"image": "ghcr.io/joejcollins/rhapsody-angel:latest",
	// "build": {
	// 	// Path is relative to the devcontainer.json file.
	// 	"dockerfile": "Dockerfile"
	// },
	"customizations": {
		"vscode": {
			"extensions": [
				"aaron-bond.better-comments",
				"james-yu.latex-workshop",
				"ms-toolsai.jupyter",
				"ms-python.python",
				"shardulm94.trailing-spaces",
				"stkb.rewrap",
				"streetsidesoftware.code-spell-checker",
			],
			"settings": {
				"files.eol": "\n",
				"editor.formatOnSave": true,
				"files.associations": {
					"*.tex": "latex"
				},
				"latex-workshop.latex.autoClean.run": "onBuilt",
				"latex-workshop.latex.clean.subfolder.enabled": true,
				"latex-workshop.latex.tools": [
					{
						"name": "latexmk",
						"command": "latexmk",
						"args": [
							"-synctex=1",
							"-interaction=nonstopmode",
							"-file-line-error",
							"-pdf",
							"-outdir=%OUTDIR%",
							"%DOC%"
						],
						"env": {}
					},
					{
						"name": "pdflatex",
						"command": "pdflatex",
						"args": [
							"-synctex=1",
							"-interaction=nonstopmode",
							"-file-line-error",
							"%DOC%"
						],
						"env": {}
					},
					{
						"name": "bibtex",
						"command": "bibtex",
						"args": [
							"%DOCFILE%"
						],
						"env": {}
					}
				],
				"latex-workshop.linting.chktex.enabled": true,
				"latex-workshop.linting.chktex.exec.path": "/usr/local/bin/chktex",
				"latex-workshop.latexindent.enabled": true,
				"latex-workshop.latexindent.exec.path": "latexindent",
				"latex-workshop.formatting.latexindent.args": [
					"-c",
					"%DIR%/",
					"%TMPFILE%",
					"-y=defaultIndent: '%INDENT%'"
				],
				"latex-workshop.synctex.afterBuild.enabled": true
			}
		}
	},
	"postCreateCommand": ". ./.devcontainer/post-create.sh | tee /tmp/post-create-log.txt"
}